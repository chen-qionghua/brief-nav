/*css reset*/

* {
    box-sizing: border-box;
    ;
}

*::before,
*::after {
    box-sizing: border-box;
}

* {
    margin: 0;
    padding: 0;
}

ul,
ol {
    list-style: none;
}


/* style */

body {
    background: #eee;
}


/* 先做移动端*/


/* 先布局 */

.globalHeader {
    margin: 20px;
    display: flex;
    justify-content: space-between;
}

.globalHeader>input {
    width: 100%;
    margin-right: 10px;
    padding: 0 10px;
    height: 40px;
    border: none;
    border-radius: 4px;
}

.globalHeader>button {
    white-space: nowrap;
    /*强制不换行*/
    padding: 0 28px;
    background: #13227A;
    border: none;
    border-radius: 4px;
    color: #eee;
    font-size: 16px;
}


/*先布局，平均布局*/

.globalMain {
    border: 1px solid red;
}

.siteList {
    border: 1px solid red;
}

.siteList>.site {}

.siteList>.site>.logo {
    border: 1px solid red;
    width: 64px;
    height: 64px;
    display: flex;
    justify-content: center;
    align-items: center;
}

.siteList>.site>.link {}

.siteList>.addButton {}