    /* css reset */
    
    * {
        box-sizing: border-box;
    }
    
    *:before,
    *:after {
        box-sizing: border-box;
    }
    
    * {
        margin: 0;
        padding: 0;
    }
    
    ul,
    ol {
        list-style: none;
    }
    
    a {
        color: inherit;
        text-decoration: none;
    }
    
    img {
        max-width: 100%;
        max-height: 100%;
    }
    /* style */
    
    body {
        background: #eee;
    }
    
    .globalHeader {
        margin: 10px 20px;
        display: flex;
        justify-content: space-between;
    }
    
    .globalHeader>input {
        width: 100%;
        margin-right: 10px;
        padding: 0 10px;
        height: 40px;
        border: none;
        border-radius: 4px;
    }
    
    .globalHeader>button {
        white-space: nowrap;
        /*强制不换行*/
        padding: 0 28px;
        background: #13227A;
        border: none;
        border-radius: 4px;
        color: #eee;
        font-size: 16px;
    }
